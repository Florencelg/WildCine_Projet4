{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
    <h1>Genre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Drama</th>
                <th>Comedy</th>
                <th>Triller</th>
                <th>Action</th>
                <th>Fantastic</th>
                <th>Horror</th>
                <th>Romantic</th>
                <th>Adventure</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.drama }}</td>
                <td>{{ genre.comedy }}</td>
                <td>{{ genre.triller }}</td>
                <td>{{ genre.action }}</td>
                <td>{{ genre.fantastic }}</td>
                <td>{{ genre.horror }}</td>
                <td>{{ genre.romantic }}</td>
                <td>{{ genre.adventure }}</td>
                <td>
                    <a href="{{ path('genre_show', {'id': genre.id}) }}">show</a>
                    <a href="{{ path('genre_edit', {'id': genre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('genre_new') }}">Create new</a>
{% endblock %}
