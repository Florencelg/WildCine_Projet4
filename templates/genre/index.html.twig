{% extends 'layout.html.twig' %}

{% block title %}Wilde Cin√©: Genres{% endblock %}

{% block body %}
    <div class="container-fluid artiste pt-5 pb-5 bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <img class="bobine"
                         src={{ asset('build/images/Bobine2.png') }}
                         alt="bobine">
                </div>
                <div class="col-lg- text-left pt-5 pl-5">
                    <h1 class="artistIndex">Genres</h1>
                    <div class="separator_auto"></div>
                    <p class="artistIndex">Les genres</p>
                </div>
                <div class="col-lg-4">
                    <img class="bobine"
                         src={{ asset('build/images/Bobine2.png') }}
                         alt="bobine">
                </div>
            </div>

            <div class="row">
                {% for genre in genres %}
                    <div class="col-lg-2 text-center mt-5">
                        <div class="cardActeur" style="width: 8rem;">
                            <a href="{{ path('genre_show', {'id': genre.id}) }}">
                                {{ genre.name }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <a href="{{ path('home') }}" class="btn btn-outline-warning badge-pill">Retour</a>
    </div>
{% endblock %}
