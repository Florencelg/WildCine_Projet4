{% extends 'layout.html.twig' %}

{% block title %}Films{% endblock %}

{% block body %}
    <div class="container-fluid artist backgroundHome">
        <div class="container text-center">
            <h1 class="mb-5 pt-5">Films</h1>
            <div class="cardActeur card mt-5 pb-5">
                <div class="row">
                    <div class="col-lg-4 mt-5">
                        <div class="cardActeur card ml-5 mt-5" style="width: 18rem;">
                            <a href="{{ path('movie_show', {'id': movie.id},{'picture': movie.picture}) }}">
                                <img class="cardActeur artistImg card-img-top"
                                     src="{{ asset('build/images/' ~movie.picture) }}"
                                     alt="Picture Movie">
                            </a>
                        </div>
                    </div>
                    <div class="card-body mt-5 pt-5 col-lg-8">
                        <h2 class="card-title">{{ movie.title }}</h2>
                        <p class="mt-5 mb-5"><span>Sortie du film: </span> {{ movie.year }}</p>
                        <h3>Synopsis</h3>
                        <p class="card-text mt-5">{{ movie.synopsis }}</p>
                        <div class="row">
                            <div class="col">
                                <h3>RÃ©alisateur</h3>
                                <div class="cardActeur mt-2">
                                    <a href="{{ path('director_show', {'id': director.id}) }}">
                                        {{ movie.directors.name }}
                                    </a>
                                </div>
                            </div>
                            <div class="col">
                                <h3>Acteurs</h3>
                                {% for artist in artists %}
                                    <div class="cardActeur mt-2">
                                        <a href="{{ path('artist_show', {'id': artist.id}) }}">
                                            {{ artist.firstname }} {{ artist.name }}
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <a href="{{ path('movie_index') }}" class="mt-3 btn btn-outline-dark badge-pill">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
